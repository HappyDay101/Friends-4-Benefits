<div class="container-fluid">
  <!-- Navbar -->
  <!-- Title Section -->
  <div class="text-center mt-4">
    <h1 class="fw-bold">Find Your Bestie</h1>
    <p class="text-muted">Find your future best friend</p>

    <!-- Search Box -->
    <div class="input-group mt-3 w-50 mx-auto">
      <input type="text" class="form-control" placeholder="Search your friend">
      <button class="btn btn-orange search-btn" type="button">Search</button>
    </div>
  </div>

  <!-- Services Cards Section -->
  <div class="row mt-4">
    <% @services.each do |service| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <img src="https://placekitten.com/300/200" class="card-img-top" alt="Service Image">
          <div class="card-body">
            <h5 class="card-title"><%= service.service_name %></h5>
            <p class="card-text"><%= service.description %></p>
            <p class="card-text"><%= service.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
