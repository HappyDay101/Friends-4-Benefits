<div class="container-fluid">
  <!-- Navbar -->
  <!-- Title Section -->
  <div class="text-center mt-4">
    <h1 class="fw-bold">Find Your Bestie</h1>
    <p class="text-muted">Find your future best friend</p>

    <!-- Search Box -->
    <div class="input-group mt-3 w-50 mx-auto">
      <input type="text" class="form-control" placeholder="Search your friend">
      <button class="btn btn-orange search-btn" type="button">Search</button>
    </div>
  </div>

  <!-- Services Cards Section -->
  <div class="row mt-4">
    <% @services.each do |service| %>
      <div class="col-md-3 mb-4">
        <!-- Wrap the card content in a link to the show page -->
        <%= link_to service_path(service) do %>
          <div class="card">
            <img src= <%= service.photo %> class="card-img-top" alt="Service Image">
            <div class="card-body">
              <h5 class="card-title"><%= link_to service.service_name, service_path(service), class: "text-decoration-none" %></h5>
              <p class="card-text"><%= service.description %></p>
              <p class="card-text">Price: <%= number_to_currency(service.price, unit: 'Â¥')  %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
