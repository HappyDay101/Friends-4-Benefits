<div class="container">

  <div class="back-button mb-3">
    <%= link_to "Back", services_path, class: "btn btn-secondary" %>
    <%= link_to "Reserve this Service", new_booking_path(service_id: @service.id), class: "btn btn-primary" %>
  </div>

  <div class="service-card">
    <div class="service-image">
      <%= image_tag 'https://thispersondoesnotexist.com/', alt: "Service Picture", class: "img-fluid" %>
    </div>
    <div class="service-content">
      <h1 class="service-title"><%= @service.user.full_name %></h1>
      <h2 class="service-subtitle"><%= @service.service_name %></h2>
      <p class="service-description"><%= @service.description %></p>
    </div>
  </div>

  <div class="col-md-8">
    <!-- Social Engagement -->
    <div class="social-engagement mt-4">
      <!-- Social Links -->
      <%= link_to "Facebook", '#', class: "mr-2" %>
      <%= link_to "Instagram", '#', class: "mr-2" %>
      <%= link_to "Website", '#' %>
      <!-- Engagement Buttons -->
      <div class="engagement-buttons mt-2">
        <button class="btn btn-light">‚ù§Ô∏è <%= '#' %></button>
        <button class="btn btn-light">üí¨ <%= '#' %></button>
        <button class="btn btn-light">üëÅÔ∏è <%= '#' %></button>
      </div>
    </div>
  </div>

  <!-- Booking Form Bar -->
  <div class="booking-form-bar">
    <%= render 'shared/booking_form' %>
  </div>

  <div class="col-md-4">
    <!-- Pricing and Ratings -->
    <div class="pricing-ratings mt-4">
      <h3><%= @service.service_name %>. Price: <%= number_to_currency(@service.price) %> / Per Service</h3>
      <div class="ratings">
        <%= render partial: 'shared/star_rating', locals: { rating: rand(0.0..5.0).round(1) } %>
        (<%= rand(1..50) %> reviews)
      </div>
    </div>

    <!-- More Details -->
    <div class="more-details mt-4">
      <h3>More Details</h3>
      <p><strong>Service:</strong> <%= @service.service_name %></p>
      <p><strong>Location:</strong> <%= @service.location %></p>
      <p><strong>Not Included:</strong> <%= "lorem ipsum" %></p>
      <p><strong>Included:</strong> <%= "lorem ipsum" %></p>
      <p><strong>Description:</strong> <%= @service.description %></p>
    </div>
  </div>
  </div>
</div>
