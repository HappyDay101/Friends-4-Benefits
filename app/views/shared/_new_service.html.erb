SERVICE_CATEGORIES = services.keys

<%= simple_form_for(@service, html: { multipart: true }) do |f| %>
  <%= f.input :service_name %>
  <%= f.input :description %>
  <%= f.input :category, collection: Service::SERVICE_CATEGORIES %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.file_field :photos, multiple: true, accept: 'image/*' %>
  <%= f.button :submit, 'Create Service' %>
<% end %>
